set nocompatible
filetype off

call plug#begin('~/.vim/plugged')
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
Plug 'kshenoy/vim-signature'
Plug 'tpope/vim-abolish'
call plug#end()

filetype plugin indent on

" Line Wrapping
set nowrap

" Line Numbering
set number

" Whitespace Management
set expandtab
set tabstop=2

" Searching
set incsearch
set hlsearch

" Disable auto-indentation.
set paste

" Coloring.
let g:airline_theme='distinguished'
colorscheme desert

" Setting smart case sensitivity for searching.
set smartcase

" Setting toggle for word wrapping and line numbering. Useful for copying
" from vim buffer to clipboard.
noremap <F3> :set invnumber invwrap<CR>

" FileType specific configurations.
autocmd FileType python setlocal softtabstop=2 tabstop=2 expandtab
